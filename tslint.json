{
  "extends": "@salesforce/dev-config/tslint",
  "rules": {
    "comment-format": [true, "check-space"],
    "no-any": {
      "severity": "off"
    },
    "no-unsafe-any": {
      "severity": "off"
    },
    "prefer-const": {
      "severity": "warning"
    },
    "prefer-for-of": {
      "severity": "warning"
    },
    "triple-equals": [true, "allow-null-check", "allow-undefined-check"]
  }
}
